#:kivy 1.1.0

<MultiLabel>:
	label1_text: 'label 1 text'
    label2_text: 'label 2 text'
    label3_text: 'label 3 text'
    label4_text: 'label 4 text'
    pos: self.pos
    size: self.size
    Label:
	    id: label1
	    text: root.label1_text
	Label:
	    id: label2
	    text: root.label2_text
	Label:
	    id: label3
	    text: root.label3_text
	Label:
	    id: label4
	    text: root.label4_text

<RV>:
	viewclass: 'MultiLabel'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<StatsScreen>:
	BoxLayout:
		id: stats
		orientation: 'vertical'
		canvas:
            Color:
                rgba: 0.09, 0.09, 0.09, 1
            Rectangle:
                size:
                    self.width * app.screen_percentage_x, \
                    self.height * app.screen_percentage_y
                pos:
                    self.parent.center_x - self.width * app.screen_percentage_x / 2., \
                    self.parent.center_y - self.height * app.screen_percentage_y / 2.
