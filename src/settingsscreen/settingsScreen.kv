#:kivy 1.1.0

<SettingsScreen>:
	BoxLayout:
		id: settings_screen
	    orientation: 'vertical'
	    canvas:
	        Color:
	            rgba: 0.09, 0.09, 0.09, 1
	        Rectangle:
	            size:
	                self.width * app.screen_percentage_x, \
	                self.height * app.screen_percentage_y
	            pos:
	                self.parent.center_x - self.width * app.screen_percentage_x / 2., \
	                self.parent.center_y - self.height * app.screen_percentage_y / 2.

		BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: self.parent.width * app.screen_percentage_x, self.parent.height * app.screen_percentage_y * app.stats_subdivision_y
            pos_hint: {'x': (1 - app.screen_percentage_x)/2., 'y': (1 - app.screen_percentage_y * app.stats_subdivision_y)/2.}
			Button:
				text: 'Delete session data'
				on_press: root.delete_session_data()
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: self.parent.width * app.screen_percentage_x, self.parent.height * app.screen_percentage_y * app.stats_subdivision_y
			pos_hint: {'x': (1 - app.screen_percentage_x)/2., 'y': (1 - app.screen_percentage_y * app.stats_subdivision_y)/2.}
            Label:
                text: 'Daily Work Goal:'
                font_size: sp(15)
	        Spinner:
	            id: h_spin
	            text: root.h_spin_default
	            values: root.h_spin_values
	            on_text: root.on_spinner_select()
	        Spinner:
	            id: m_spin
	            text: root.m_spin_default
	            values: root.m_spin_values
	            on_text: root.on_spinner_select()
		Widget: